<h1>Add a new task</h1>

<% if @task.errors.any? %>
    <h2>וודא את השגיאות הבאות: </h2>
    <ul>
        <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @task do |f| %>

<p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>
<p>
    <%= f.label :description %>
    <%= f.text_area :description %>
</p>
<p>
    <%= f.submit %>
</p>

<% end %>